<UserControl x:Class="GUI.Visualisation.BinaryGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="79">
    <Border BorderBrush="#FFE4D4D4" BorderThickness="1">
        <Grid Name="grdMain" Margin="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>
            <Label Content="Binary Title 1" Margin="0" x:Name="lblBinary" Background="White" Foreground="#FF020000" Grid.RowSpan="1"/>
            <Canvas x:Name="cvsBar" Margin="0" Grid.Row="1" Background="White"/>

        </Grid>
    </Border>
</UserControl>
