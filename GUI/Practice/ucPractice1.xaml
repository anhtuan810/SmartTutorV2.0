<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Practice" xmlns:k="http://schemas.microsoft.com/kinect/2013" x:Class="GUI.Practice.ucPractice1" 
             mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
        </Grid.Background>
        <Image x:Name="imgKinect"/>
        <local:ucCountDown x:Name="CountDown" HorizontalAlignment="Center" Height="250" Margin="0" VerticalAlignment="Center" Width="250"/>
        <k:KinectTileButton x:Name="btnStop" Content="Stop" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Height="100" Width="100" Foreground="White" Click="btnStop_Click"/>
        <Label x:Name="lblTest" Content="Label" HorizontalAlignment="Left" Margin="37,397,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
